<% if content.video_link.nil? %>
  <p><%= video_tag content.video, :size => "320x240", :controls => true   %></p>
<% else %>
  <p><iframe width="320" height="240" src="<%= content.video_link %>" frameborder="0" gesture="media"  allow="encrypted-media" allowfullscreen></iframe></p>
  <!-- if there's no video -->
<% end %>
