<div class="container">
  <div class="container-form" style="width: 70%; margin: 0 auto;">
    <h3>New Content</h3>
    <%= simple_form_for [@publisher, @course, @content] do |f| %>
    <%= f.input :name %>
    <%= f.input :description %>
    <%= f.input :video_link %>
    <%= f.input :video %>
    <%= f.submit class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
