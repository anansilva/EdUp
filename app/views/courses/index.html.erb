<h1>Your Courses</h1>
<% @courses.each do |course| %>
  <div class='course-body'>
    <h3><%= course.name %></h3>
    <p><%= course.description %></p>
    <% if course.video_link.nil? %>
    <p><%= video_tag course.video, :size => "320x240", :controls => true   %></p>
    <% else %>
    <p><iframe width="320" height="240" src="<%= course.video_link %>" frameborder="0" gesture="media" allow="encrypted-media" allowfullscreen></iframe></p>
    <% end %>
  </div>
<% end %>

<% if !current_publisher.nil? %>
<%= link_to 'Add new course', new_publisher_course_path, class: "bnt bnt-lg" %>
<% end %>
